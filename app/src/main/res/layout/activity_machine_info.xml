<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:text="Device List"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/connection"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/title"
        android:layout_marginTop="10dp"
        android:textStyle="normal"/>
    <CheckBox
        android:id="@+id/selectCheck"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Check/Uncheck All"
        android:buttonTint="#1B5E20"
        android:visibility="invisible"
        android:layout_marginBottom="4dp"
        android:textColor="#000" />
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="#9E9E9E"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ipAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="invisible"
            android:text="IP Address"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/devicename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="Device"
            android:visibility="invisible"
            android:layout_marginLeft="40dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="#000000"
            android:visibility="invisible"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="Operation"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:buttonTint="#1B5E20"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            android:focusableInTouchMode="false" />
        <TextView
            android:id="@+id/ipValue1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/devicenameValue1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text=""
            android:layout_marginTop="3dp"
            android:textAllCaps="false"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:visibility="invisible"
            android:buttonTint="#1B5E20"
            android:layout_marginTop="4dp"
            android:focusableInTouchMode="false" />
        <TextView
            android:id="@+id/ipValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/devicenameValue2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text=""
            android:textAllCaps="false"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="invisible"
            android:focusable="false"
            android:buttonTint="#1B5E20"
            android:layout_marginTop="4dp"
            android:focusableInTouchMode="false" />
        <TextView
            android:id="@+id/ipValue3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/devicenameValue3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/spinner3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text=""
            android:textAllCaps="false"
            android:textStyle="normal" />
    </LinearLayout>
    <!--<ListView-->
        <!--android:id="@+id/machineInfoList"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="380dp"-->
        <!--android:divider="@null"-->
        <!--android:layout_marginTop="25dp">-->
    <!--</ListView>-->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:textColor="#000"
            android:layout_margin="6dp"
            android:visibility="invisible"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button_cyan"
            android:text="Save" />

    </RelativeLayout>
</LinearLayout>