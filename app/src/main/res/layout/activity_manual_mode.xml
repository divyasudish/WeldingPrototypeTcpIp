<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back8"
    tools:context="com.taal.welding.activities.ManualModeActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual mode"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/titleIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/title"/>
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="360dp"
        android:layout_below="@+id/titleIp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_border">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/backFront"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Back and Front"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"/>
            <Button
                android:id="@+id/front"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backFront"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:background="@drawable/forward"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/front"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:background="@drawable/backward"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle"
            android:layout_below="@id/rel1">

        </RelativeLayout>
        <com.taal.welding.canvas.Arc
            android:id="@+id/arc"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="160dp"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/triangle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/arc"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:background="@drawable/triangle">
        </LinearLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/triangle"
            android:text="Progress End point"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/arc"
            android:textColor="#FF0000"/>


    </RelativeLayout>
</RelativeLayout>
