<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/splash_1"
    tools:context="com.taal.welding.activities.ManualModeActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual mode"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="340dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="60dp"
        android:background="@drawable/edittext_border">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                android:id="@+id/backFront"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Back and Front"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"/>
            <Button
                android:id="@+id/front"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backFront"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text=" + "
                android:background="@drawable/custom_button_teal"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/front"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text=" - "
                android:background="@drawable/custom_button_orange"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/goHome"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Go Home"
            android:layout_below="@+id/rel1"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/header"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Header Position Screen"
            android:layout_below="@+id/goHome"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button_bg_green"/>
    </RelativeLayout>
</RelativeLayout>
